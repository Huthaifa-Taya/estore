<% stylesheet_link_tag 'users.generic' %>
<div class="container-lg d-flex flex-row flex-wrap justify-content-center vw-100 h-100">
  <section class="wrapper">
    <div class="container-fostrap">
      <div>
<!--        <h1 style="font-size: 3rem">Users</h1>-->
        <h1 class="heading">
          All users
        </h1>
      </div>
      <div class="content">
        <div class="container">
          <div class="row">
            <% if @users %>
              <% @users.each do |user| %>


                <div class="col-xs-12 col-sm-4">
                  <div class="card">
                    <div class="card-content">
                      <h4 class="card-title">
                        <%= user.name.capitalize %>
                      </h4>
                      <p class="">
                        Role: <%= user.role %>
                      </p>
                      <!--                      </div>-->
                      <div class="card-read-more">
                        <%= link_to 'edit', admin_user_edit_path(admin_id: 1, id: user.id), class: "btn btn-link btn-block" %>
                      </div>
                    </div>
                  </div>
                </div>

              <% end %>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </section>

</div>